@model IEnumerable<DemoDapper.Models.Product>

<table class="table table-striped">
    <thead>
        <tr>
            <th>產品編號</th><th>名稱</th><th>價格</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach(Product item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        }
    </tbody>
</table>